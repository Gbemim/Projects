{

    "manifest_version": 2,
    "name": "Youtube Promo",
    "version": "1.0",
  
    "description": "Adds a red border to all webpages matching mozilla.org.",
  
    "icons": {
        "48": "icons/border-48.png"
    },

    "sidebar_action": {
        "default_title": "My sidebar",
        "default_panel": "index.html",
        "default_icon": "icons/border-48.png"
      },

    "content_scripts": [
      {
        "matches": ["*://*.mozilla.org/*"],
        "js": ["index.js"]
      }
    ]
  
  }